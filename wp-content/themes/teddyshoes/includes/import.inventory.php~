<?php $wpdb;
$szSQL      =  "SELECT  ID
               FROM     wp_posts
               WHERE    post_type   =  'wpsc-product'
               AND      post_parent =  0";
$aryPostIDs =  $wpdb -> get_results (  $szSQL,
                                       OBJECT_K  
                                    );

foreach  (    $aryPostIDs  as $objProduct )
{  $nProductID    =  $objProduct -> ID;  
   $szSQL         =  "SELECT  ID,
                              post_name
                     FROM     wp_posts
                     WHERE    post_type   =  'wpsc-product'
                     AND      post_parent =  $nProductID";
   $aryVariations =  $wpdb -> get_results (  $szSQL,
                                             ARRAY_N
                                          );
   
   
}

